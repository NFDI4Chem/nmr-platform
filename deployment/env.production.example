# NMR Platform Production Environment Configuration

# Application
APP_NAME="NMR Platform"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_GENERATED_KEY
APP_DEBUG=false
APP_URL=https://your-production-domain.com
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=nmr_platform_prod
DB_USERNAME=nmr_platform_user
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
REDIS_PORT=6379
REDIS_CLIENT=phpredis
HORIZON_REDIS_CONNECTION=horizon

# MinIO S3 Storage
MINIO_ENDPOINT=https://your-minio-server.com
MINIO_ROOT_USER=REPLACE_WITH_MINIO_USER
MINIO_ROOT_PASSWORD=REPLACE_WITH_MINIO_PASSWORD
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=nmr-platform-prod
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=${MINIO_ENDPOINT}

# Meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=REPLACE_WITH_MEILISEARCH_KEY
SCOUT_DRIVER=meilisearch

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@nmr-platform.org"
MAIL_FROM_NAME="${APP_NAME}"

# Security
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SANCTUM_STATEFUL_DOMAINS=your-production-domain.com
SESSION_DOMAIN=.your-production-domain.com

# Queue
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Misc
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
MEMCACHED_HOST=127.0.0.1 